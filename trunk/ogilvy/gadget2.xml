<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="Six Flags SkyDrifter" directory_title="Six Flags SkyDrifter" title_url="http://www.sixflags.com/" screenshot="http://www.sixflags.com/national/games/gadget/skydrifter_scn.jpg" thumbnail="http://www.sixflags.com/national/games/gadget/skydrifter_tmb.png" description="Navigate Sky Drifter through the obstacles in the theme park, and win a prize!" author="Six Flags" author_email="contact@sixflags.com" author_link="http://www.sixflags.com/" width="300" height="250"> 
    <Require feature="flash"/> 
    <Require feature="analytics"/>
  </ModulePrefs>
  <UserPref name="size" display_name="Flash Size" datatype="enum" default_value="300x250">
    <EnumValue display_value="small" value="240x200"/>
    <EnumValue display_value="medium" value="300x250"/>
    <EnumValue display_value="large" value="360x300"/>
  </UserPref>
  <Content type="html">
  <![CDATA[
  <div id="flashcontainer__MODULE_ID__">Please wait</div>
  <script language="javscript" type="text/javascript">
    // the load flash function
    function loadFlash__MODULE_ID__() {
      var prefs = new _IG_Prefs();
      
      // Get the flash width and height
      var size = prefs.getString('size').split('x');
      var width = size[0];
      var height = size[1];
    
      // the flash url
      prefix__MODULE_ID__ = 'http://gmodules.com/ig/proxy?url=http://www.sixflags.com/national/games/gadget/';
      url__MODULE_ID__ = 'http://gmodules.com/ig/proxy?url=http://www.sixflags.com/national/games/gadget/index.swf';

      _IG_EmbedFlash(url__MODULE_ID__ , "flashcontainer__MODULE_ID__", {
        swf_version: 8,
        id: "flashcontainer__MODULE_ID__",
        width: size[0],
        height: size[1],
	      FlashVars: 'prefix=' + prefix__MODULE_ID__
      });

    } // end loadFlash()

    // Call init function to load the flash
    _IG_RegisterOnloadHandler(loadFlash__MODULE_ID__);
  </script>
  ]]>
  </Content>
</Module>