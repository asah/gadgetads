<Module>
  <ModulePrefs title="Nike Plus Map It" title_url="http://www.nike.com/nikeplus/#mapit" directory_title="Nike Plus Map It" category="news" category2="tools" render_inline="optional" height="350" description="View Nike Plus user's runs in you area" />
