    <style>
      #mapContainer {
        width: 336px; 
        height: 280px;
      }
      #mapContainer {
        width: 336px;
        height: 225px;
      }
      #infoContainer {
        width: 336px; 
        height: 30px;
        font: 0.7em Verdana, sans-serif; 
        font-weight: bold;
