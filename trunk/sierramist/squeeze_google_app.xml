<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
  <ModulePrefs title="Sierra Mist Lemon Squeeze" 
      width="300" 
      height="250" 
      author="Sierra Mist" 
      author_email="stempleton@tribalddb.com" 
      directory_title="Sierra Mist Lemon Squeeze" 
      screenshot="http://sierramist.com/lemon_squeeze/scripts/ls_screenshot.jpg" 
      thumbnail="http://sierramist.com/lemon_squeeze/scripts/ls_thumbnail.jpg" 
      description="Tips and tricks for squeezing some extra fun out of summer from Sierra Mist Lemon Squeeze.">
    <Require feature="flash"/>
    <Require feature="interaction-tracking"/>
  </ModulePrefs>
  <UserPref name="clickurl" datatype="hidden" default_value="http://gadgetads.googlecode.com/svn/trunk/test_clickurl.html?url="/>
  <UserPref name="aiturl" datatype="hidden"/>
  <Content type="html">
  <![CDATA[
    <div id="fc"></div>
    <script>
      // Set the SWF and destination URLs with your own
      var swfUrl = 'http://a405.g.akamai.net/f/405/11649/1h/pepsicoinc.download.akamai.com/11649/sites/sierramist.com/videos/GoogleGadget/gadget_ad_1.swf';
      var destUrl = 'http://www.xsqueezeme.com/?or=goog.1030';
    
      // Create the redirect URL to track click throughs
      var prefs = new _IG_Prefs();
      var clickUrl = prefs.getString('clickurl');
      var redirectUrl = clickUrl + _esc(destUrl);
      
      // Embed Flash into HTML container div
      _IG_EmbedFlash(_IG_GetCachedUrl(swfUrl), 'fc', {
          quality: 'high',
          allowScriptAccess: 'always',
          width: 300,
          height: 250,
          flashvars: 'clickTAG=' + _esc(redirectUrl)
        });
    </script>
  ]]></Content> 
</Module>