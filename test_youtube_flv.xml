<?xml version="1.0" encoding="UTF-8"?>
<Module>
<ModulePrefs title="Streaming FLV From YouTube" />
<Content type="html"><![CDATA[
  <style>
    body {
      font-size: 0.9em;
    }
    
    #flvOut a {
      color: #00c;
    }
  </style>
  
  <div>
    Link to the FLV file on YouTube for this
    <a href="http://www.youtube.com/watch?v=WWyJJQbFago">video</a>.  The video
    ID is <b>WWyJJQbFago</b>
  </div>
  <div id="flvOut"</div>

  <script>
    var flvOut = _gel('flvOut');
    var flvUrl = 'http://www.youtube.com/get_video?';
    var flvUrl += [
        'video_id=' + _esc(videoId),
        'ts=' + _esc(__ENV_time_secs_since_epoch__),
        't=' + _esc('__YOUTUBE_VIDEO_TEST(WWyJJQbFago)__'),
        'gad=1'
      ].join('&');
    flvOut.innerHTML = '<a target="_top" href="' + flvUrl + '">' + flvUrl + '</a>';
  </script>
]]></Content>
</Module>