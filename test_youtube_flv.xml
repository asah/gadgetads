<?xml version="1.0" encoding="UTF-8"?>
<Module>
<ModulePrefs title="Streaming FLV From YouTube">
  <Require feature="flash"/>
</ModulePrefs>
<Content type="html"><![CDATA[
  <style>
    body {
      font-size: 0.9em;
    }
    a {
      color: #00c;
    }
    div#player {
      width: 300px;
      height: 250px;
      background-color: #000;
      text-align: center;
    }
    div#click {
      width: 150px;
      padding: 10px 0px;
      background-color: #eef;
      font-weight: bold;
      font-size: 1.2em;
      margin: 0px auto;
      position: relative;
      top: 100px;
      cursor: pointer;
    }
  </style>
  
  <div>
    Here's the <a id="flvLink" target="_top">FLV link</a>
    for this <a href="http://www.youtube.com/watch?v=WWyJJQbFago">YouTube video</a>.
  </div>
  <div id="player">
    <div id="click" href="javascript:play();">Click to Play</div>
  </div>

  <script>
    function play() {
      // Manually create the link to the FLV file on YouTube
      var flvURL = 'http://www.youtube.com/get_video?';
      flvURL += [
          'video_id=' + _esc('WWyJJQbFago'),
          'ts=' + _esc(__ENV_time_secs_since_epoch__),
          't=' + _esc('__YOUTUBE_VIDEO_TEST(WWyJJQbFago)__'),
          'gad=1'
        ].join('&');
      
      // Set the href attribute so the user can see what it looks like
      _gel('flvLink').href = flvURL;
    
      // Embed my own Flash player using the FLV from YouTube
      var fv = 'clickURL=http://www.google.com&flvURL=' + _esc(flvURL);
      _IG_EmbedFlash("http://gadgetads.googlecode.com/svn/trunk/small_player.swf", "player", {
          swf_version: 8, 
          width: 300, 
          height: 250, 
          flashvars: fv
        });
    }
  </script>
]]></Content>
</Module>