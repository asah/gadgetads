<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Sample Map">
  </ModulePrefs>
  <Content type="html">
  <![CDATA[
    <style>
      #map {
        width: 300px;
        height: 250px;
      }
    </style>

    <img onclick="loadMap();" src="http://gadgetads.googlecode.com/svn/trunk/sample_map.png" width=306 height=202a/>
    <div id="map"></div>
    
    <script>
      // http://maps.google.com/maps?file=api&amp;v=2.x

     function loadMap() {
        var head = document.getElementsByTagName('head')[0];
        var script = document.createElement('script');
        script.src = 'http://maps.google.com/maps?file=api&amp;v=2.x';
        script.type = 'text/javascript';
        head.appendChild(script);

        waitMap();
        alert('here');
      }

      function waitMap() {
        window.setTimeout(function() {
          var mapInit = _gel('mapInit');
          mapInit.innerHTML = 'loading map...';

          alert(GMap2);
          if (typeof GMap2 == 'undefined') {
            waitMap();
          } else {
            loadMapCallback();
          }
        }, 1000);
      }

      function loadMapCallback() {
        alert(GMap2);
        if (GBrowserIsCompatible()) {
          var map = new GMap2(_gel('map'));
          map.addControl(new GSmallMapControl());
          map.addControl(new GMapTypeControl());
          map.setCenter(new GLatLng(37.4419, -122.1419), 13);
        }
      }
    </script>
  ]]> 
  </Content>
</Module>
